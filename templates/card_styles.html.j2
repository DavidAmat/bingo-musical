/* A4 landscape: 297mm x 210mm = 1122px x 794px at 96dpi */
:root {
  --bg: {{ background_color|default('#700302') }};
}

@page { size: A4 landscape; margin: 0; }

* { box-sizing: border-box; }

html, body {
  margin: 0;
  padding: 0;
  width: 1122px;
  height: 794px;
  overflow: hidden;
}

body {
  font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif;
  background: var(--bg);
  color: #1a1a1a;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bingo-card {
  background: var(--bg);
  width: 1000px;
  height: 700px;
  padding: 30px;
  display: flex;
  flex-direction: column;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 20px;
  position: relative;
}

.title-wrap { 
  display: flex; 
  align-items: center; 
}

.card-title {
  font-weight: 800;
  letter-spacing: 0.5px;
  font-size: 36px;
  text-transform: uppercase;
  color: #fff;
  white-space: nowrap;
  margin: 0;
}

.card-id {
  position: absolute;
  left: 0;
  bottom: -16px;
  font-weight: 700;
  font-size: 14px;
  color: #fff;
  opacity: 0.8;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 12px;
  flex: 1;
  margin-top: 15px;
}

.song-card {
  background: rgba(255, 253, 246, 0.92);
  border: 2px solid #d1b07a;
  border-radius: 10px;
  padding: 10px 8px;
  display: block;
  overflow: hidden;
}

.song-card-inner {
  display: table;
  width: 100%;
  height: 100%;
  table-layout: fixed;
}

.song-card-cell {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.song-title {
  display: block;
  font-weight: 800;
  font-size: 35px;
  line-height: 1.2;
  margin-bottom: 8px;
  text-align: center;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.song-artist {
  display: block;
  font-weight: 500;
  font-size: 31px;
  opacity: 0.85;
  line-height: 1.2;
  text-align: center;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

@media print {
  html, body {
    width: 297mm;
    height: 210mm;
  }
  .bingo-card { 
    width: 100%;
    height: 100%;
    page-break-after: always;
  }
}
