<div class="bingo-card" style="--bg: {{ background_color|default('#FFEAB3') }};">
  <div class="card-header">
    <div class="title-wrap">
      {% if title_images %}
        <div class="title-images">
          {% for img in title_images %}
            <img src="{{ img.src }}" alt="{{ img.alt or 'decor' }}" class="decor {{ img.position|default('left') }}"
                 style="{{ img.style|default('') }}"/>
          {% endfor %}
        </div>
      {% endif %}
      <h1 class="card-title">{{ title }}</h1>
    </div>
    <div class="card-id">#{{ card_number }}</div>
  </div>

  <div class="grid">
    {% for s in songs %}
    <div class="song-card">
      <div class="song-title">{{ s.title }}</div>
      <div class="song-artist">{{ s.artist }}</div>
    </div>
    {% endfor %}
  </div>
</div>
